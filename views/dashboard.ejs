<h1 class="mt-4">Dashboard</h1>

<p class="lead mb-3">Welcome, <%= user.name %> ! </p>

<% classroomsDisplay = classrooms.map(function(c) { %>
    <div class="container p-2" >
        <div class="w-100 card m-4" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"> <%= c.title %></h5>
                <h6 class="card-subtitle mt-3 text-muted"><%= c.subject %></h6>
                <div class="mt-5">
                <a href="/users/classrooms/<%=c.title%>" class="card-link "> Open </a>
                </div>
            </div>
        </div>    
    </div>
<% }) %>