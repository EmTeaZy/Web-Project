<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-bullhorn"></i> Make an announcement
        </h1>
        <%- include ("./partials/messages") %>
        <form action="/users/classrooms/<%= title %>/createAnnouncement" method="POST">
          <div class="form-group">
            <label for="header"> Header </label>
            <input
              type="name"
              id="header"
              name="header"
              class="form-control"
              placeholder="Enter Header"
              value="<%= typeof header != 'undefined' ? header : '' %>"
            />  
          </div>
          <div class="form-group">
            <label for="desc"> Description </label>
            <input
              type="name"
              id="desc"
              name="desc"
              class="form-control"
              placeholder="Enter Description"
              value="<%= typeof desc != 'undefined' ? desc : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="annFile"> Attach A File </label>
            <input
              type="file"
              id="annFile"
              name="annFile"
              class="form-control"
              placeholder="Upload a file"
              value="<%= typeof file != 'undefined' ? file : '' %>"
              multiple
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Create
          </button>
        </form>
      </div>
    </div>
  </div>
  